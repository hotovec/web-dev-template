{% block scripts %}

    <script>

        $(function () {
            // hero - tabs js
            var homeSlick = $('.hero-slides').slick({
                dots: false,
                infinite: true,
                speed: 300,
                slidesToShow: 1,
                adaptiveHeight: true
            });

            var oldSlick = null;

            $("[slickTo]").each(function () {
                $(this).mouseenter(function () {
                    console.log("slick");
                    if (oldSlick) {
                        oldSlick.removeClass("active");
                    }

                    var slide = $(this).attr("slickTo");
                    $(this).addClass("active");
                    $('.hero-slides').slick('slickGoTo', slide);
                    oldSlick = $(this);
                });


            });
        });


        // block feed JS

        var blogSlick = $('.block-feed-slider').slick({
            dots: false,
            infinite: true,
            speed: 300,
            slidesToShow: 2,
            slidesToScroll: 2,
            adaptiveHeight: true,
            responsive: [
                {
                    breakpoint: 960,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                }
            ]
        });

        // full size carousel

        var blogSlick = $('.full-carousel').slick({
            dots: true,
            infinite: true,
            speed: 300,
            slidesToShow: 1,
            slidesToScroll: 1,
            adaptiveHeight: true
        });


        // custom selector
        $(function () {

            $(".custom-select").each(function(){
                $(this).wrap("<span class='select-wrapper'></span>");
                $(this).after("<span class='holder'></span>");
            });

            $(".custom-select").change(function(){
                var selectedOption = $(this).find(":selected").text();
                var holder = $(this).next(".holder");
                holder.text(selectedOption);
                console.log(selectedOption);
            }).trigger('change');
        })

    </script>
{% endblock %}

